<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vcolorBlackBtn"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".VendingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="3" android:paddingBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/vend_connect" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/vending_pairing_txt"
        android:textAlignment="center"
        android:textColor="@color/vcolorGrey" android:layout_weight="2" android:textSize="20sp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:orientation="horizontal" android:dividerPadding="22dp" android:divider="@drawable/vend_progress_divider"
            android:showDividers="middle"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vend_progress_fill_box" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vend_progress_unfill_box" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vend_progress_unfill_box" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/vend_progress_unfill_box" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>