<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vcolorBlackBtn"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".VendingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingBottom="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fail" />
        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/vending_fail_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:text="@string/vending_pair_fail_txt"
        android:textAlignment="center"
        android:textColor="@color/vcolorOrange1"
        android:textSize="20sp" />




</LinearLayout>